





import numpy as np


def mse_calc( arr1, arr2):
    arr_dif = arr1 - arr2
    arr_dif = np.power(arr_dif,2)
    print(arr_dif.mean())



arr1 = np.array([2,2,3])
arr2 = np.array([0,2,3])

mse_calc(arr1, arr2)


def mae_calc( arr1, arr2):
    arr_dif = arr1 - arr2
    arr_dif = np.abs(arr_dif)
    print(arr_dif.mean())


mae_calc(arr1, arr2)





